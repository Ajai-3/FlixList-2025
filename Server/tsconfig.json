{
  "compilerOptions": {
    "target": "ES6",
    "module": "NodeNext",  
    "moduleResolution": "nodenext", 
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true, 
    "noEmit": true,  
    "outDir": "./dist"
  },
  "include": ["src/**/*.ts"]
}
